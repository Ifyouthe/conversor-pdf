# =============================================
# CONFIGURACIÓN CONVERSOR PDF - SUMATE
# =============================================

# Puerto del servidor
PORT=3004

# Entorno
NODE_ENV=development

# API de iLovePDF (para conversión de documentos)
ILOVEPDF_PUBLIC_KEY=your_ilovepdf_public_key
ILOVEPDF_SECRET_KEY=your_ilovepdf_secret_key

# URL del servicio constructor de documentos
CONSTRUCTOR_DOCUMENTOS_URL=http://localhost:3003

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Configuración de conversión
MAX_FILE_SIZE_MB=10
DEFAULT_CONVERSION_METHOD=puppeteer # puppeteer | ilovepdf
ENABLE_FALLBACK=true

# Configuración Puppeteer
PUPPETEER_HEADLESS=new
PUPPETEER_TIMEOUT=60000

# Configuración de cache temporal
TEMP_DIR=/tmp/pdf-converter
CLEANUP_INTERVAL_MS=300000